@{
    ViewBag.Title = "Home Page";
}
<script type="text/javascript">
    $(document).ready(function () { 
    $(function () {
        // Populate State/Provinces
        $('#Make').change(function () {
                var selectedMakeID = this.value;
                $.ajax({
                    url: "/ComboBox/Models",
                    type: "post",
                    data: {
                        comboId: "Model",
                        makeId: selectedMakeID
                    },
                    success: function (result) {
                        // refreshes partial view
                        $('#ModelContainer').html(result);
                        debugger;
                    },
                    fail: function () {
                        alert("error");
                    }
                });
    });
        });
    });
</script>
<div class="row">

    <div class="col-md-3">
        <h3>Why choose BTFB</h3>
        <p>Lorem impusm dolor sit amet dela bid sela</p>
    </div>
    <div class="col-md-3">
        <h3>About us</h3>
        <p>
            BTFB, Inc. is a family owned company. Our family has been servicing the
            nations south transporting vehicles from coast to coast since 2011 as
            Yes Auto Transport, Inc., our sister car carrier company.
        </p>
        <p> @Html.ActionLink("Learn more >>", "About", "Home", null, new { @class = "nav-link" })</p>
    </div>
    <div class="col-md-6 ">
        <br />
        <div class="container">
            <div class="card">
                <div class="card-block">

                    <div class="row">
                        <div class="col-md-12">
                            @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "p-2", role = "Form" }))
                            {
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">

                                            <input type="text" class="form-control" placeholder="First name">
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" class="form-control" placeholder="Last name">
                                        </div>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control col-md-6" placeholder="Email">
                                </div>

                                <div class="form-group">

                                    <input type="tel" class="form-control col-md-6" placeholder="Phone">

                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="card">
                                                <div class="card-block">
                                                    <div class="card-title p-2"><h5>Origin</h5></div>
                                                    <div class="from-group p-2">
                                                        <input type="text" class="form-control col-md-12" placeholder="City" />
                                                    </div>
                                                    <div class="from-group p-2">
                                                        @{Html.RenderAction("States", "ComboBox", new { ComboId = "FromState" });}

                                                    </div>
                                                    <div class="from-group p-2">
                                                        <input type="text" class="form-control col-md-12" placeholder="Zip Code" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="card">
                                                <div class="card-block">
                                                    <div class="card-title p-2"><h5>Destination</h5></div>
                                                    <div class="from-group p-2">
                                                        <input type="text" class="form-control col-md-12" placeholder="City" />
                                                    </div>
                                                    <div class="from-group p-2">
                                                        @{Html.RenderAction("States", "ComboBox", new { ComboId = "ToState" });}
                                                    </div>
                                                    <div class="from-group p-2">
                                                        <input type="text" class="form-control col-md-12" placeholder="Zip Code" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            @{Html.RenderAction("Makes", "ComboBox", new { ComboId = "Make" });}
                                        </div>
                                        <div class="col-md-6" id="ModelContainer">
                                            @{Html.RenderAction("Models", "ComboBox", new { ComboId = "Model" });}

                                        </div>
                                    </div>
                                </div>
                          
                                <div class="row">
                                    <div class="col-md-6">
                                        @{ Html.RenderAction("Years", "ComboBox", new { ComboId = "Years" });}
                                    </div>
                                </div>
                                <br />
                                <button type="submit" class="btn btn-outline-primary">Request quote</button>
                            }
                        </div>
                    </div>

                </div>
            </div>

        </div>


    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
