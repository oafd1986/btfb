<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 shrink-to-fit=no">
    <title>@ViewBag.Title - BTFB</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/business-frontpage.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">BTFB Inc.</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    @*<li class="nav-item active">
            <a class="nav-link" href="#">
                Home
                @*<span class="sr-only">(current)</span>
            </a>
        </li>*@
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="dropdown">

                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-user fa-fw"></i><i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                @Html.ActionLink(User.Identity.Name.ToString() + "-Profile", "Index", "Manage")

                            </li>
                            <li>
                                <a href="#"><i class="fa fa-gear fa-fw"></i>Settings</a>
                            </li>
                            <li class="divider"></li>
                            <li>

                                @Html.ActionLink("Log out", "LogOff", "Account")
                            </li>
                        </ul>

                    </li>
                    }
                    else
                    {

                    }
                </ul>
            </div>
        </div>
    </nav>
    <header class="business-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">

                   <h1 class="display-3 text-center text-white mt-4">Best Transport Freight Brokers, Inc.</h1>
                </div>
                <div class="row">
                    <div class="col-lg-4"> <img class="img-thumbnail img-responsive" src="~/Content/Img/logo.png" /></div>
                    
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        @RenderBody()
        <hr />

    </div>
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">&copy; @DateTime.Now.Year - Best Transport Freight Brokers, Inc. All Rights Reserved.</p>
        </div>        
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>

</html>
